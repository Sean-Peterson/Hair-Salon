{% extends "index.html.twig"%}

    {% block navbar %}
    <a href="/">Home</a>
    <a href="/stylist/{{client.getStylistId}}">Back</a>
    {% endblock %}
    {% block content %}
        <h1>{{client.getClientName}}</h1>
    {% endblock %}
    {% block controls %}
        <h3>Edit {{client.getClientName}}'s name</h3>
        <form action="/client/{{client.getId}}/patch" method="post">
            <input name="_method" type="hidden" value="patch">
            <label for="new_name">Enter a new name for {{client.getClientName}} </label>
            <input type="text" name="new_name" required>
            <button type="submit" name="edit" placeholder="New name for {{client.getClientName}}">change</button>
        </form>
        <h3>Don't let {{client.getClientName}} come back here</h3>
        <form action="/client/{{client.getId}}/{{stylist.getId}}/remove" method="post">
            <input name="_method" type="hidden" value="delete">
            <button type="submit">{{client.getClientName}}, you can't come back here!</button>
        </form>
    {% endblock %}
